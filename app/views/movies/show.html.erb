<div class="d-flex">
    <img src="<%= @movie.poster %>" class="movie-poster" alt="Movie Poster">
      <div class="movie-info">
        <h1><%= @movie.title %></h1>
        <p style="font-weight: lighter;font-size: 12px;"> <%= @movie.year %> • <%= @movie.genres %></p>

        <p><% @friends_average_rating.times do  %>
          <i class="fas fa-star rating"></i>
        <% end %> <small><em>– average friends rating</em></small></p>

        <p><strong>Directed by: </strong><%= @movie.directors %></p>
        <p><strong>Starring: </strong><%= @movie.actors %></p>
        <p style="margin-bottom: 0px;"><strong>Plot: </strong>
        <p><%= @movie.plot %></p>
      </div>
  </div>

<div class="d-flex justify-content-between mt-5 watchlist">
  <h2>Reviews by friends</h2>
  <%= link_to new_movie_review_path(@movie) do %>
    <p><i class="fas fa-plus-circle"></i>Create new</p>
  <% end %>
</div>
  <hr>

<div>
  <% if @reviews.any? %>
    <% @reviews.each do |review| %>
    <div class="review-card">
      <% review.rating.times do  %>
        <i class="fas fa-star rating"></i>
      <% end %> – <%= review.content %>
      <br>
      <small><em>by <%= review.user.first_name %> <%= review.user.last_name %></em></small>
    </div>
    <% end %>
  <% end %>
</div>
