<div style="background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),url('https://source.unsplash.com/featured/?movies');background-size:cover;background-position:center;height:100vh;overflow:scroll;">
  <div class="signup-container mt-5">

    <h2>Log in</h2>
    <br>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "Log in", class: "button-pink" %>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
  </div>
</div>
