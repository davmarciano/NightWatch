  <%= simple_form_for(modal_watchlist_movie, url: watchlists_movies_path, remote: true, method: :post) do |f| %>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addMovieModalLabel">Add Movie</h5>
        <button type="button" id="movie-close" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-xs-4">
              <% if controller_name == 'movies' && @movie.present? %>
                <%= f.input :movie_id, collection: Movie.all.order(:title), label: "Add Title", include_hidden: false, selected: @movie.id %>
              <% else %>
                <%= f.input :movie_id, collection: Movie.all.order(:title), label: "Add Title", include_hidden: false %>
              <% end %>
              <% if controller_name =='watchlists' && @watchlist.present? %>
                <%= f.input :watchlist_id, collection: Watchlist.where(user: current_user), label: "Add to Watchlist", selected: @watchlist.id%>
              <% else %>
                <%= f.input :watchlist_id, collection: Watchlist.where(user: current_user), label: "Add to Watchlist" %>
              <% end %>
              <%= f.input :comment, label: "Add comment"%>
              <%= f.input :rating, collection: (1..5).to_a, label: "Give a rating"%>
            </div>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn button-pink-small-secondary" data-dismiss="modal">Cancel</button>
        <%= f.submit "Add Movie", class: "btn button-pink-small" %>
      </div>
    </div>
  </div>
  <% end %>
