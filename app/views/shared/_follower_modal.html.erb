<!-- Followe Modal -->
<div class="modal fade" id="followerModal" tabindex="-1" role="dialog" aria-labelledby="followerModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="followerModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if @followers.count == 0 %>
          <p><%= No one is following you 🙁 %></p>
        <% else %>
        <div class="friend-card">
        <% @followers.each do |f| %>
          <%= link_to profile_path(f), class: "friend-card-link" do  %>
            <% if f.follower.profile_picture? %>
                <%= cl_image_tag f.follower.profile_picture, class: "avatar-bordered" %>
            <% else %>
                <%= image_tag "https://i2.wp.com/metro.co.uk/wp-content/uploads/2019/09/PRI_85461411.jpg?quality=90&strip=all&zoom=1&resize=644%2C779&ssl=1", class: "avatar-bordered" %>
              <% end %>
              <p><%= f.follower.first_name %></p>
            </div>
          <% end %>
        <% end %>
      </div>
      <% end %>
      <div class="modal-footer">
        <button type="button" class="btn button-pink-small" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
