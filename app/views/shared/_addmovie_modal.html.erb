<!-- Modal -->
<div class="modal fade" id="addMovieModal" tabindex="-1" role="dialog" aria-labelledby="addMovieModalLabel" aria-hidden="true">
  <%= simple_form_for(WatchlistMovie.new, url: watchlists_movies_path, method: :post) do |f| %>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addMovieModalLabel">Add Movie</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-xs-4">
              <%= f.input :movie, collection: Movie.all, label: "Add Title" %>
              <%= f.input :watchlist, collection: Watchlist.where(user: current_user), label: "Add to Watchlist"%>
              <%= f.input :comment, label: "Add comment"%>
              <%= f.input :rating, collection: (1..5).to_a, label: "Give a rating"%>
            </div>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn button-pink-small-secondary" data-dismiss="modal">Cancel</button>
        <%= f.submit "Add Movie", class: "btn button-pink-small" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
