<div class="container">
  <h1> What do you think about the movie?</h1>
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for [@movie, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
        <%= f.submit "Review Movie" %>
      <% end %>
    </div>
  </div>
</div>
