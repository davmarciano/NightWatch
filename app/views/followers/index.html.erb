<div>
  <h2>Following</h2>
  <ul>
    <% @followings.each do |f| %>
      <p><%= link_to "#{f.first_name} #{f.last_name}", profile_path(f) %></p>
    <% end %>
  </ul>
</div>

<div>
  <h2>Followers</h2>
  <ul>
    <% @followers.each do |f| %>
      <p><%= link_to "#{f.followable.first_name} #{f.followable.last_name}", profile_path(f.followable) %></p>
    <% end %>
  </ul>
</div>
